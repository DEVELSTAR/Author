<h1>Listing Authors</h1>

<table>
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Date Of Birth</th>
			<th>Books</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @authors.each do |author| %>
		  <tr>
			<td><%= author.first_name %> </td>
			<td><%= author.last_name %> </td>
			<td><%= author.date_of_birth %> </td>
			<td><%= link_to 'view', author %></td>
			<td><%= link_to 'Edit', edit_author_path(author) %></td>
			<td><%= link_to 'Delete', author, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></td>
		  </tr>
	    <% end %>
	</tbody>
</table> 
<%= link_to "Create", new_author_path %>