<h1>Listing Authors</h1>

<table>
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Date Of Birth</th>
			<th>Books</th>
		</tr>
	</thead>
	<tbody>
		<% @authors.each do |author| %>
		  <tr>
			<td><%= author.first_name %> </td>
			<td><%= author.last_name %> </td>
			<td><%= author.date_of_birth %> </td>
			<td><%= author.books %> </td>
		  </tr>
	    <% end %>
	</tbody>
</table> 